# snippets for eruby
snippet =
	<%= ${1}  %>
snippet for
	<% for ${1:item} in ${2:collection}  %>
		<%= $1  %>
	<% end %>
snippet if
	<% if ${1:condition}  %>
		${2}
	<% end %>
snippet unless
	<% unless ${1:condition}  %>
		${2}
	<% end %>
snippet title
	<%= title "${1:title}"  %>
snippet admin?
	<% if @$1.logged_in? && @${1:current_user}.admin?  %>
		<% $1 %>
	<% end %>
snippet link
	<%= link_to("${1}",${2}_path)  %>
