[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = gvim --nofork
    excludesfile = ~/.gitignore
[alias]
    co = commit
    ck = checkout
    df = diff
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files 
    pl = pull origin master
    ps = push origin master
    st = status
    wc = whatchanged
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
