[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = vim
    excludesfile = ~/.gitignore
[alias]
    ck = checkout
    df = diff
    st = status
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
